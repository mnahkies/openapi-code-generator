{
  "name": "openapi-code-generator-root",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "postinstall": "husky install",
    "docs:generate": "markdown-toc -i --bullets=- ./README.md",
    "refresh": "./scripts/refresh-data.sh",
    "start": "nodemon",
    "lint": "eslint . --cache --report-unused-disable-directives --fix",
    "format": "prettier --write .",
    "build": "lerna run build --scope '@nahkies/*'",
    "test": "jest",
    "integration:generate": "lerna run generate --stream --concurrency 1",
    "integration:validate": "lerna run validate --stream",
    "ci-build": "lerna run build --stream",
    "ci-test": "jest --coverage",
    "ci-lint": "eslint . --cache --report-unused-disable-directives",
    "ci-format": "prettier --list-different .",
    "ci-pipeline": "yarn ci-build && yarn ci-test && yarn lint && yarn format && yarn integration:generate && yarn integration:validate"
  },
  "author": "Michael Nahkies",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node18": "^1.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.0",
    "markdown-toc": "^1.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.2"
  },
  "workspaces": [
    "packages/*",
    "integration-tests/*"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn lint",
      "yarn prettier --write"
    ],
    "*.md": [
      "sh -c 'yarn docs:generate'",
      "yarn prettier --write"
    ]
  },
  "engines": {
    "node": ">=18 <20"
  },
  "packageManager": "yarn@3.5.0"
}
