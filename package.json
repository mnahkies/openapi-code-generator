{
  "name": "openapi-code-generator-root",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "refresh": "./scripts/refresh-data.sh",
    "start": "nodemon",
    "analyse": "eslint ./packages/**/src --cache --fix --ext .js,.jsx,.ts,.tsx",
    "build": "lerna run build --scope 'openapi-code-generator'",
    "test": "lerna run test --scope 'openapi-code-generator'",
    "generate": "lerna run generate --stream --concurrency 1",
    "validate": "lerna run validate --stream",
    "ci-build": "lerna run ci-build --stream",
    "ci-test": "lerna run ci-test --stream",
    "ci-analyse": "eslint ./packages/**/src --ext .js,.jsx,.ts,.tsx",
    "ci-pipeline": " lerna run ci-pipeline && yarn generate && yarn validate"
  },
  "author": "Michael Nahkies",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.22.1",
    "lerna": "^4.0.0",
    "mocha": "^8.3.2",
    "mocha-teamcity-reporter": "^3.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
