{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node20/tsconfig"],
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    // prefer eslint rule
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "Node16",
    "paths": {
      "@nahkies/*": ["./packages/*/src"]
    }
  }
}
