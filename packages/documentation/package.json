    "nextra-theme-docs": "^3.3.1",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.54.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
