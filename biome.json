{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/packages/openapi-code-generator/src/core/schemas/openapi-3.0-specification-validator.js",
      "!**/packages/openapi-code-generator/src/core/schemas/openapi-3.1-specification-validator.js",
      "!**/integration-tests/**/generated/**/*",
      "!**/integration-tests-definitions/**/*",
      "!**/e2e/src/generated/**/*",
      "!**/schemas/**/*.json",
      "!**/package.json",
      "!**/package.json"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": false,
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "error"
      },
      "nursery": {
        "noImportCycles": "error"
      },
      "style": {
        "noParameterAssign": "error"
      }
    },
    "includes": [
      "**",
      "!**/packages/openapi-code-generator/src/core/schemas/openapi-3.0-specification-validator.js",
      "!**/packages/openapi-code-generator/src/core/schemas/openapi-3.1-specification-validator.js",
      "!**/integration-tests/**/generated/**/*",
      "!**/integration-tests-definitions/**/*",
      "!**/e2e/src/generated/**/*",
      "!**/schemas/**/*.json",
      "!**/package.json",
      "!**/package.json"
    ]
  }
}
