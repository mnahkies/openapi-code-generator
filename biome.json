{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "integration-tests/**/*",
      "integration-tests-definitions/**/*",
      "schemas/*.json",
      "packages/*/package.json",
      "package.json"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": false,
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "packages/openapi-code-generator/src/core/schemas/openapi-3.0-specification-validator.js",
      "packages/openapi-code-generator/src/core/schemas/openapi-3.1-specification-validator.js",
      "integration-tests/**/*",
      "integration-tests-definitions/**/*",
      "schemas/*.json",
      "packages/*/package.json",
      "package.json"
    ]
  }
}
